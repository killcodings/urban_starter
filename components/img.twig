<img decoding="async"

     class = "image {{ img.class }}"

    {% if img.loading %}
        loading="{{ img.loading }}"
    {% endif %}

    {% if img.width %}
        width="{{ img.width }}"
    {% endif %}

    {% if img.height %}
        height="{{ img.height }}"
    {% endif %}

    {% if img.src %}
        src="{{ img.src }}"
    {% endif %}

    {% if img.alt %}
        alt="{{ img.alt }}"
    {% endif %}

    {% if img.srcset %}
        srcset="{{ image.srcset }}"
    {% endif %}

    {% if img.sizes %}
        sizes="{{ img.sizes }}"
    {% endif %}
>
